<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.xj.af.index.jieyuan.JieYuanDetailActivity">

    <TextView android:text="结缘经书" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="30dp"
        android:paddingTop="10dp"
        android:paddingLeft="10dp" />

    <LinearLayout
        android:id="@+id/jieyuan_input_layout"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:paddingTop="50dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/jieyuan_des"
            android:textColor="@color/gray2"
            android:padding="10dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/jieyuan_detail_address"
            android:layout_gravity="center_horizontal"
            android:hint="邮寄地址" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/jieyuan_detail_phonenumber"
            android:hint="电话" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/jieyuan_detail_num"
            android:hint="数量" />



        <Button
            android:layout_width="105dp"
            android:layout_height="wrap_content"
            android:text="提交"
            android:id="@+id/jieyuan_submit"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="50dp" />

        <TextView android:text="" android:layout_width="wrap_content"
            android:id="@+id/jieyuan_errormsg"
            android:layout_height="wrap_content"
            android:textColor="@color/red"
            android:textSize="20dp"
            android:paddingTop="10dp"
            android:paddingLeft="10dp" />




    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="恭喜，您的数据提交成功"
        android:id="@+id/jieyuan_result"
        android:paddingTop="150dp"
        android:paddingLeft="20dp"
        android:visibility="gone"
        android:textColor="@color/black"
         />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/jieyuan_result"
        android:text=" 返 回 "
        android:id="@+id/jieyuan_back_btn"
        android:layout_gravity="center_horizontal"
        android:layout_alignParentBottom="false"
        android:layout_alignParentRight="true"
        android:layout_alignParentLeft="false"
        android:layout_alignParentTop="false"
        android:layout_alignWithParentIfMissing="false"
        android:visibility="gone"
        android:layout_marginRight="30dp" />
</RelativeLayout>
