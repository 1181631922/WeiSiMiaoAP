<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:background="#DCDCDC"
    tools:context="cn.edu.sjzc.fanyafeng.activity.EventSignUpActivity">

    <LinearLayout
        android:id="@+id/group_01"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:gravity="center">

            <View
                android:layout_width="fill_parent"
                android:layout_height="1sp"
                android:background="#808A87" />

            <TextView
                android:id="@+id/user_name"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="3dp"
                android:gravity="center"
                android:text="姓名"
                android:textColor="#000000"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/username"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="1dp"
                android:layout_toRightOf="@id/user_name"
                android:background="@android:color/transparent"
                android:hint="孔子"
                android:textSize="16sp" />
        </RelativeLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1sp"
            android:background="#808A87" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:gravity="center">

            <TextView
                android:id="@+id/user_newpwd"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="3dp"
                android:gravity="center"
                android:text="性别"
                android:textColor="#000000"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/usernewpwd"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="1dp"
                android:layout_toRightOf="@id/user_newpwd"
                android:background="@android:color/transparent"
                android:hint="男"
                android:textSize="16sp" />
        </RelativeLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1sp"
            android:background="#808A87" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:gravity="center">

            <TextView
                android:id="@+id/user_newpassword"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="3dp"
                android:gravity="center"
                android:text="电话"
                android:textColor="#000000"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/userrealname"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="1dp"
                android:layout_toRightOf="@id/user_newpassword"
                android:background="@android:color/transparent"
                android:hint="10000000000"
                android:textSize="16sp" />
        </RelativeLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1sp"
            android:background="#808A87" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:gravity="center">

            <TextView
                android:id="@+id/user_newpass"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="3dp"
                android:gravity="center"
                android:text="报名人数"
                android:textColor="#000000"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/baomingrenshu"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="1dp"
                android:layout_toRightOf="@id/user_newpass"
                android:background="@android:color/transparent"
                android:hint="4"
                android:textSize="16sp" />
        </RelativeLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1sp"
            android:background="#808A87" />

        <Button
            android:id="@+id/send"
            android:layout_width="fill_parent"
            android:layout_height="35dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/login_selector"
            android:gravity="center"
            android:text="确定报名"
            android:textColor="@android:color/white"
            android:textSize="15sp" />
    </LinearLayout>

</LinearLayout>
